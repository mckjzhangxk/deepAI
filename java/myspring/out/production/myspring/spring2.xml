<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans default-init-method="myinit" default-destroy-method="mycleanup">
    <bean id="parent" class="org.zxk.javabrain.module2.Triangle" abstract="true">
        <property name="pt1" ref="pt1"></property>
        <property name="pts">
            <list>
                <ref bean="pt1"/>
            </list>
        </property>
    </bean>
    <bean id="triangle" class="org.zxk.javabrain.module2.Triangle"  scope="singleton" parent="parent">
        <property name="pt2" ref="pt2"/>
        <property name="pt3" ref="pt3"/>
        <property name="pts">
            <list merge="true">
                <ref bean="pt2"/>
            </list>
        </property>
    </bean>


    <bean id="pt1" class="org.zxk.javabrain.module2.Point">
        <property name="x" value="0.0"/>
        <property name="y" value="0.0" />
    </bean>
    <bean id="pt2" class="org.zxk.javabrain.module2.Point">
        <property name="x" value="1.0"/>
        <property name="y" value="0.0" />
    </bean>
    <bean id="pt3" class="org.zxk.javabrain.module2.Point">
        <property name="x" value="0.0"/>
        <property name="y" value="1.0" />
    </bean>

    <bean class="org.zxk.javabrain.module2.ShowNameBeanProcessor" />
</beans>